	override function beatHit()
	{
		super.beatHit();

		if(logoBl != null) 
			logoBl.animation.play('bump', true);

		if(!closedState) {
			sickBeats++;
			switch (sickBeats)
			{
				case 1:
					createCoolText(['Mod made by']);
				case 2:
					addMoreText('shadowman', 15, 'shadowman');
				case 3:
					deleteCoolText();
				case 4:
					addMoreText('With the help of', -60);
					addMoreText('artemap', -16, 'artemap');
				case 5:
					addMoreText('darth', -12, 'darth');
					addMoreText('crazydany', -8, 'crazydany');
				case 6:
					addMoreText('and invoid', -4, 'invoid');
				case 7:
					deleteCoolText();
				case 8:
					createCoolText([curWacky[0]]);
				case 9:
					addMoreText(curWacky[1]);
				case 10:
					addMoreText(curWacky[2]);
				case 11:
					deleteCoolText();
				case 12:
					addMoreText('Friday');
				case 13:
					addMoreText('Night');
				case 14:
					addMoreText('Funkin');
				case 15:
					addMoreText('Hiding');
				case 16:
					addMoreText('in');
				case 17:
					addMoreText('Shadows');
				case 18:
					skipIntro();
			}
		}
	}

